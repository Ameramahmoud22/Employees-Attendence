@model Employees_Attendence.Models.Worker

@{
    ViewData["Title"] = "تعديل عامل: " + Model.Name;
}

<div class="app-card p-4 bg-dark text-light shadow-lg rounded-4">
    <h3 class="text-gold mb-4">
        <i class="fa-solid fa-pen-to-square me-2"></i> @ViewData["Title"]
    </h3>
    <hr class="border-gold mb-4" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label text-gold fw-bold"></label>
                    <input asp-for="Name" class="form-control bg-dark text-light border-gold" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Type" class="form-label text-gold fw-bold"></label>
                    <input asp-for="Type" class="form-control bg-dark text-light border-gold" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Phone" class="form-label text-gold fw-bold"></label>
                    <input asp-for="Phone" class="form-control bg-dark text-light border-gold" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Address" class="form-label text-gold fw-bold"></label>
                    <input asp-for="Address" class="form-control bg-dark text-light border-gold" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="DailyWage" class="form-label text-gold fw-bold"></label>
                    <input asp-for="DailyWage" class="form-control bg-dark text-light border-gold" />
                    <span asp-validation-for="DailyWage" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-4">
                    <label asp-for="Notes" class="form-label text-gold fw-bold"></label>
                    <textarea asp-for="Notes" class="form-control bg-dark text-light border-gold"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CategoryId" class="form-label text-gold fw-bold"></label>
                    <select asp-for="CategoryId" class="form-control bg-dark text-light border-gold" asp-items="ViewBag.Categories"></select>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PayrollType" class="form-label text-gold fw-bold"></label>
                    <select asp-for="PayrollType" class="form-control bg-dark text-light border-gold">
                        <option value="Weekly">أسبوعي</option>
                        <option value="Monthly">شهري</option>
                    </select>
                    <span asp-validation-for="PayrollType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-gold me-2">
                        <i class="fa-solid fa-floppy-disk me-1"></i> حفظ التعديلات
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fa-solid fa-arrow-left me-1"></i> العودة إلى القائمة
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
