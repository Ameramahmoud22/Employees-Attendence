@model Employees_Attendence.Models.Worker

@{
    ViewData["Title"] = "إضافة عامل جديد";
}

<div class="container py-5">
    <h2 class="text-gold mb-4">إضافة عامل جديد</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">الاسم</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">الفئة</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="PayrollType" class="form-label">نوع القبض</label>
                    <select asp-for="PayrollType" class="form-control">
                        <option value="">اختر نوع القبض</option>
                        <option value="Weekly">أسبوعي</option>
                        <option value="Monthly">شهري</option>
                    </select>
                    <span asp-validation-for="PayrollType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">النوع</label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">الهاتف</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DailyWage" class="form-label">اليومية</label>
                    <input asp-for="DailyWage" class="form-control" />
                    <span asp-validation-for="DailyWage" class="text-danger"></span>
                </div>

                 <div class="mb-3">
                    <label asp-for="Address" class="form-label">العنوان</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">ملاحظات</label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-gold">إضافة</button>
                    <a href="/Workers" class="btn btn-outline-secondary ms-2">إلغاء</a>
                </div>
            </form>
        </div>
    </div>
</div>
