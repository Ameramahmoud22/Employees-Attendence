@model Employees_Attendence.Models.Category

@{
    ViewData["Title"] = "تعديل فئة: " + Model.Name;
}

<div class="container py-5">
    <div class="card p-4 shadow-lg border-0" style="background: #121212;">
        <h3 class="text-gold mb-4">
            <i class="fa-solid fa-pen-to-square me-2"></i> @ViewData["Title"]
        </h3>
        <hr class="border-gold" />

        <form asp-action="Edit" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="Name" class="form-label fw-semibold text-light"></label>
                <input asp-for="Name" class="form-control bg-dark text-light border-gold" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-gold">
                    <i class="fa-solid fa-floppy-disk me-1"></i> حفظ التعديلات
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> العودة إلى القائمة
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .text-gold {
            color: #d4af37;
        }

        .border-gold {
            border: 1px solid #d4af37 !important;
        }

        .btn-gold {
            background-color: #d4af37;
            color: #0d0d0d;
            border-radius: 50px;
            font-weight: 600;
        }

            .btn-gold:hover {
                background-color: #b8922e;
            }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
