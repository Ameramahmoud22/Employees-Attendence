@model IEnumerable<Employees_Attendence.Models.Category>

@{
    ViewData["Title"] = "قائمة الفئات";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="brand-title">قائمة الفئات</h2>
        <a asp-action="Create" class="btn btn-gold">+ إضافة فئة جديدة</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">لا توجد فئات حالياً.</div>
    }
    else
    {
        <table class="table table-striped text-center align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>الاسم</th>
                    <th>الوصف</th>
                    <th>عدد العمال</th>
                    <th>الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@(item.Workers?.Count() ?? 0)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">تعديل</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
