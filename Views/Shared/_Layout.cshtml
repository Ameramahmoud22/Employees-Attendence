@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Al-Banna</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #0a0a0a;
            color: #f8f8f8;
            overflow-x: hidden;
        }

        /* Navbar */
        .navbar {
            background-color: rgba(15, 15, 15, 0.92);
            border-bottom: 1px solid #d4af37;
            backdrop-filter: blur(8px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
        }

        .navbar-brand {
            color: #d4af37 !important;
            font-weight: 700;
            letter-spacing: 1px;
            font-size: 1.2rem;
        }

            .navbar-brand img {
                height: 50px;
                width: auto;
                filter: drop-shadow(0 0 10px rgba(212,175,55,0.4));
                border-radius: 8px;
            }

        .nav-link {
            color: #f8f8f8 !important;
            margin-inline: 10px;
            transition: 0.3s;
            font-weight: 600;
        }

            .nav-link:hover {
                color: #d4af37 !important;
                transform: translateY(-2px);
            }

        /* General Section Colors */
        main {
            padding: 40px 0;
            background: linear-gradient(to bottom right, #0d0d0d, #1b1b1b);
            min-height: 85vh;
        }

        footer {
            text-align: center;
            color: #b5b5b5;
            background-color: #0d0d0d;
            border-top: 1px solid #2e2e2e;
            padding: 20px 0;
            font-size: 0.9rem;
        }

        /* Accent Gold */
        .text-gold {
            color: #d4af37;
        }

        /* Tables + Cards */
        .table-dark {
            background-color: #111 !important;
            color: #f8f8f8 !important;
        }

            .table-dark tr:hover {
                background-color: #222 !important;
            }

        .card {
            background: linear-gradient(145deg, #141414, #1c1c1c);
            border: 1px solid rgba(212, 175, 55, 0.2);
            border-radius: 15px;
            transition: 0.3s;
            color: #f8f8f8;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0 20px rgba(212,175,55,0.3);
            }

        .card-title, .stat-number {
            color: #ffd700;
            font-weight: 700;
        }

        .btn-gold {
            background: #d4af37;
            color: #0d0d0d;
            border: none;
            border-radius: 50px;
            padding: 10px 25px;
            transition: all 0.4s;
            font-weight: 600;
        }

            .btn-gold:hover {
                background: #b8922e;
                transform: scale(1.05);
            }

        .btn-outline-gold {
            border: 1px solid #d4af37;
            color: #d4af37;
            transition: 0.3s;
        }

            .btn-outline-gold:hover {
                background-color: #d4af37;
                color: #000;
            }

        /* Floating animation for logo */
        @@keyframes floatLogo {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-8px);
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <img src="~/images/logoNew.jpg" alt="Logo" style="height:50px; width:auto;">
                <span>البنا وبيت البناء </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Home">الرئيسية</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Categories">الفئات</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Workers">العمال</a></li>
                    <li class="nav-item"><a class="nav-link" href="/WeeklyPayroll">قبض أسبوعي</a></li>
                    <li class="nav-item"><a class="nav-link" href="/MonthlyPayroll">قبض شهري</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Dashboard">الإحصائيات</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Workers" asp-action="CompanyWorkers">بيانات العمال</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Attendance" asp-action="Index">تسجيل الحضور</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>© @DateTime.Now.Year – Beit Al-Bina | Designed by Marmora</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
