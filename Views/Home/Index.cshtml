@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<section class="container py-5">
    <div class="text-center mb-5" data-aos="fade-up">
        <h1 class="text-gold fw-bold">  لوحه تحكم الخاصة بالعمال</h1>
        <p class="text-muted">نظرة عامة على أداء العمال والفئات</p>
    </div>

    <div class="row g-4">
        <!-- عدد العمال -->
        <div class="col-md-3 col-sm-6" data-aos="zoom-in">
            <div class="card bg-dark border-gold text-center shadow-lg h-100">
                <div class="card-body">
                    <i class="bi bi-people fs-1 text-gold mb-3"></i>
                    <h5 class="card-title text-gold">عدد العمال</h5>
                    <h2 class="fw-bold">45</h2>
                </div>
            </div>
        </div>

        <!-- عدد الفئات -->
        <div class="col-md-3 col-sm-6" data-aos="zoom-in" data-aos-delay="100">
            <div class="card bg-dark border-gold text-center shadow-lg h-100">
                <div class="card-body">
                    <i class="bi bi-grid-1x2 fs-1 text-gold mb-3"></i>
                    <h5 class="card-title text-gold">عدد الفئات</h5>
                    <h2 class="fw-bold">6</h2>
                </div>
            </div>
        </div>

        <!-- إجمالي القبض الأسبوعي -->
        <div class="col-md-3 col-sm-6" data-aos="zoom-in" data-aos-delay="200">
            <div class="card bg-dark border-gold text-center shadow-lg h-100">
                <div class="card-body">
                    <i class="bi bi-cash-stack fs-1 text-gold mb-3"></i>
                    <h5 class="card-title text-gold">إجمالي القبض الأسبوعي</h5>
                    <h2 class="fw-bold">12,500 ج.م</h2>
                </div>
            </div>
        </div>

        <!-- إجمالي القبض الشهري -->
        <div class="col-md-3 col-sm-6" data-aos="zoom-in" data-aos-delay="300">
            <div class="card bg-dark border-gold text-center shadow-lg h-100">
                <div class="card-body">
                    <i class="bi bi-calendar3 fs-1 text-gold mb-3"></i>
                    <h5 class="card-title text-gold">إجمالي القبض الشهري</h5>
                    <h2 class="fw-bold">50,000 ج.م</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5" data-aos="fade-up">
        <div class="card bg-dark border-gold shadow-lg">
            <div class="card-body">
                <h5 class="text-gold mb-3">ملاحظات وإحصائيات إضافية</h5>
                <ul class="text-light">
                    <li>أكثر فئة عمّال نشاطًا: <span class="text-gold">الدهان</span></li>
                    <li>عدد العمال الحاضرين اليوم: <span class="text-gold">38</span></li>
                    <li>إجمالي الخصومات هذا الأسبوع: <span class="text-gold">2,300 ج.م</span></li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .border-gold {
            border: 1px solid #d4af37 !important;
        }
    </style>
}

@section Scripts {
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
}
