@model List<Employees_Attendence.Models.WeeklyPayrollRecord>

@{
    ViewData["Title"] = "صرف أسبوعي";
    var weekStart = ViewBag.WeekStart != null ? (DateTime)ViewBag.WeekStart : DateTime.Today;
    var payrollByCategory = ViewBag.PayrollByCategory as Dictionary<Employees_Attendence.Models.Category, List<Employees_Attendence.Models.WeeklyPayrollRecord>> ?? new Dictionary<Employees_Attendence.Models.Category, List<Employees_Attendence.Models.WeeklyPayrollRecord>>();
    var attendanceDays = ViewBag.AttendanceDays as Dictionary<int, int> ?? new Dictionary<int, int>();
    var grandTotal = ViewBag.GrandTotal != null ? (decimal)ViewBag.GrandTotal : 0m;
    var arabicDays = new[] { "السبت", "الأحد", "الاثنين", "الثلاثاء", "الأربعاء", "الخميس", "الجمعة" };
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-gold">@ViewData["Title"] - الأسبوع من @weekStart.ToString("dd/MM/yyyy")</h2>
        <div>
            <a class="btn btn-outline-light me-2" asp-action="Index" asp-route-weekStart="@weekStart.AddDays(-7).ToString("yyyy-MM-dd")">← الأسبوع السابق</a>
            <a class="btn btn-outline-light me-2" asp-action="Index" asp-route-weekStart="@weekStart.AddDays(7).ToString("yyyy-MM-dd")">الأسبوع التالي →</a>
            <button type="submit" form="payrollForm" class="btn btn-gold">حفظ القبض</button>
        </div>
    </div>

    <form id="payrollForm" asp-action="SaveWeekly" method="post">
        @Html.AntiForgeryToken()

        @{ var index = 0; }
        @foreach (var (category, records) in payrollByCategory)
        {
            <h3 class="text-gold mt-4">@(category?.Name ?? "غير مصنف")</h3>
            <div class="table-responsive shadow rounded">
                <table class="table align-middle text-center mb-0" style="background:#0f0f0f; color:#fff;">
                    <thead style="background:#111; border-bottom:2px solid #d4af37;">
                        <tr>
                            <th>العامل</th>
                            <th>أيام الحضور</th>
                            <th>المبلغ المستحق</th>
                            <th>سلفيات</th>
                            <th>خصميات</th>
                            <th>الصافي</th>
                            <th style="width: 20%;">ملاحظات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in records)
                        {
                            var days = attendanceDays.GetValueOrDefault(record.WorkerId, 0);

                            <tr>
                                <td class="text-start ps-3">@record.Worker.Name</td>
                                <td>@days</td>
                                <td>@record.WeeklyAmount.ToString("N0")</td>
                                <input type="hidden" name="entries[@index].WorkerId" value="@record.WorkerId" />
                                <input type="hidden" name="entries[@index].WeekStart" value="@weekStart.ToString("yyyy-MM-dd")" />
                                <td><input type="number" name="entries[@index].Advances" value="@record.Advances" class="form-control form-control-sm bg-dark text-light border-secondary" /></td>
                                <td><input type="number" name="entries[@index].Deductions" value="@record.Deductions" class="form-control form-control-sm bg-dark text-light border-secondary" /></td>
                                <td>@record.NetPay.ToString("N0")</td>
                                <td><input type="text" name="entries[@index].Notes" value="@record.Notes" class="form-control form-control-sm bg-dark text-light border-secondary" /></td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="text-end mt-4 pe-3">
            <h4 class="text-gold">الإجمالي الكلي: @grandTotal.ToString("N0") جنيه</h4>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .text-gold {
            color: #d4af37;
        }

        .btn-gold {
            background: #d4af37;
            color: #000;
            border-radius: 30px;
            padding: 8px 16px;
            border: none;
        }

        .btn-outline-light {
            background: transparent;
            color: #fff;
            border: 1px solid rgba(255,255,255,0.08);
            padding: 6px 10px;
            border-radius: 8px;
        }

        input.form-control {
            width: 100%;
        }
    </style>
}
